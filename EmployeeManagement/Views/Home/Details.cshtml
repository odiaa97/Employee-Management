@model HomeDetailsViewModel
@{
    var PhotoPath = "~/Images/" + (Model.Employee.PhotoPath ?? "person-icon.png");

}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>

    <div>
        <h1>@Model.PageTitle</h1>
    </div>

    <div>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>
                        <img class="rounded-circle z-depth-2" alt="50x50" width="50" height="50"
                             src="@PhotoPath"
                             data-holder-rendered="true"
                             asp-append-version="true">
                    </td>
                    <td>@Model.Employee.Name</td>
                    <td>@Model.Employee.Email</td>
                    <td>@Model.Employee.department</td>
                    <td><a asp-controller="home" asp-action="index" class="btn btn-info">Back</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>


